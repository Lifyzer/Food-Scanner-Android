<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp5"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginTop="@dimen/dp20">

        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp30"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_detected_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_app_name"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/edt_detected_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:background="@drawable/tv_button_stroke_gray"
                android:cursorVisible="false"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@drawable/img_edit"
                android:imeOptions="actionGo"
                android:inputType="text"
                android:paddingLeft="@dimen/dp15" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_viewproduct"
            style="@style/EditInputField"
            android:layout_below="@+id/ll_detected_text"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/tv_button_green"
            android:fontFamily="sans"
            android:gravity="center"
            android:text="@string/View_Product"
            android:textStyle="normal" />


    </RelativeLayout>

</android.support.v7.widget.CardView>